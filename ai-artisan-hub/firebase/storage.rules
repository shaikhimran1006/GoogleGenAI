rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Product images are publicly readable, but only writable by authenticated users
    match /products/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User profile images are publicly readable, but only writable by the owner
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Artisan portfolio images are publicly readable, but only writable by the owner
    match /artisans/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}