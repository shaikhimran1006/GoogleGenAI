rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Artisan profiles are publicly readable, but only writable by the owner
    match /artisans/{artisanId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == artisanId;
    }
    
    // Products are publicly readable, but only writable by the artisan owner
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.uid == resource.data.artisanId;
    }
    
    // Orders are only accessible to the buyer and artisan involved
    match /orders/{orderId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.buyerId || 
         request.auth.uid == resource.data.artisanId);
    }
    
    // Analytics data is only accessible to the artisan owner
    match /analytics/{artisanId} {
      allow read, write: if request.auth != null && request.auth.uid == artisanId;
    }
    
    // Translation cache is publicly readable
    match /translations/{translationId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}